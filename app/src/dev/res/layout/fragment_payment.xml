<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@drawable/bg_payment_page"
    android:orientation="vertical"
    android:padding="@dimen/dp15">



    <LinearLayout
        android:id="@+id/ll_theory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_wallet"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:background="@drawable/bg_rounded_rect_grid"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">

                <ImageView
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:tint="?attr/app_text_color"
                    android:src="@mipmap/reduce" />

                <com.customviews.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center"
                    android:text="@string/reduced_queueing"
                    android:textAllCaps="true"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="?attr/app_font_normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:gravity="center"
                android:background="@drawable/bg_rounded_rect_grid"

                android:orientation="vertical"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">

                <ImageView
                    android:tint="?attr/app_text_color"
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:src="@mipmap/risk"
                     />

                <com.customviews.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center"
                    android:text="@string/reduced_risk"
                    android:textAllCaps="true"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="?attr/app_font_normal" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_rect_grid"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">

                <ImageView
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:tint="?attr/app_text_color"
                    android:src="@mipmap/key"
                     />

                <com.customviews.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center"
                    android:text="@string/save_time"
                    android:textAllCaps="true"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="?attr/app_font_normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bg_rounded_rect_grid"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">

                <ImageView
                    android:layout_width="@dimen/dp25"
                    android:tint="?attr/app_text_color"
                    android:layout_height="@dimen/dp25"
                    android:src="@mipmap/pay"
                     />

                <com.customviews.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center"
                    android:text="@string/positive_cash_flow"
                    android:textAllCaps="true"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="?attr/app_font_normal" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bg_rounded_rect_grid"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">

                <ImageView
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:tint="?attr/app_text_color"
                    android:src="@mipmap/information"
                     />

                <com.customviews.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center"
                    android:text="@string/management_control_information"
                    android:textAllCaps="true"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="?attr/app_font_normal" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bg_rounded_rect_grid"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">

                <ImageView
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:tint="?attr/app_text_color"
                    android:src="@mipmap/hand"
                     />

                <com.customviews.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:gravity="center"
                    android:text="@string/eliminate_cash_handling_costs"
                    android:textAllCaps="true"
                    android:textColor="?attr/app_text_color"
                    android:textSize="?attr/app_text_size_extra_small"
                    app:custom_font="?attr/app_font_normal" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.customviews.TypefaceTextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp10"
        android:layout_marginTop="@dimen/dp15"
        android:text="@string/payment_methods"
        android:textColor="#414141"
        android:layout_marginBottom="@dimen/dp10"
        android:textSize="?attr/app_text_size_normal"
        app:custom_font="?attr/app_font_normal" />

    <LinearLayout
        android:id="@+id/ll_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text"
        android:background="@drawable/bg_rounded_rect"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <ImageView
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:tint="?attr/app_text_color"
            android:src="@mipmap/ic_cash" />

        <com.customviews.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:text="@string/cash"
            android:textColor="?attr/app_text_color"
            android:textSize="?attr/app_text_size_big"
            app:custom_font="?attr/app_font_normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_cash"
        android:background="@drawable/bg_rounded_rect"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp10">

        <ImageView
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:tint="?attr/app_text_color"
            android:src="@drawable/ic_wallet" />

        <com.customviews.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp10"
            android:text="@string/wallet"
            android:textColor="?attr/app_text_color"
            android:textSize="?attr/app_text_size_big"
            app:custom_font="?attr/app_font_normal" />

    </LinearLayout>


    <com.customviews.TypefaceTextView
        android:id="@+id/tv_payment_remaining"
        android:layout_width="match_parent"
        android:layout_height="?btn_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/red_color_rect"
        android:gravity="center"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="?attr/btn_text_color"
        android:textSize="?attr/btn_text_size"
        app:custom_font="?attr/app_font_medium" />

</RelativeLayout>